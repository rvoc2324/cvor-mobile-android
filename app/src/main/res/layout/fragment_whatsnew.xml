<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_primary"
    android:orientation="vertical"
    android:paddingTop="50dp">

    <!-- Title Background Container for Elevated Effect -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@color/colorPrimary">

        <!-- Title Text -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/file_manager_fragment_title"
            android:letterSpacing="0.1"
            style="@style/TextStyle.SubTitle"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textAlignment="viewStart"/>
    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Features Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/colorSecondary"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/features_heading"
                    style="@style/TextStyle.SubTitle"
                    android:textColor="@color/white"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/whats_new_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/whats_new_body"
                    style="@style/TextStyle.Body"
                    android:textColor="@color/white"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/colorSecondary"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faq_heading"
                    style="@style/TextStyle.SubTitle"
                    android:textColor="@color/white"
                    android:paddingBottom="8dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/faq_question"
                    style="@style/Widget.Material3.ListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How do I add a watermark?"
                    android:textColor="@color/text"
                    app:expanded="false"
                    app:expandable="true"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Message Us Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/colorSecondary"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_us_prompt"
                    style="@style/TextStyle.Body"
                    android:textColor="@color/white"
                    android:paddingBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/message_us_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/message_us_button"
                    style="@style/PrimaryButtonStyle"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Leave a Review Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/colorSecondary"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/review_prompt"
                    style="@style/TextStyle.Body"
                    android:textColor="@color/white"
                    android:paddingBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/review_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/leave_review"
                    style="@style/PrimaryButtonStyle"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>